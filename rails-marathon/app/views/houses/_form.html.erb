<%= form_for @house do |f| %>
  <div class="row">
    <%= f.label :name, 'Name' %>
    <%= f.text_field :name %>
  </div>

  <div class="row">
    <%= f.label :author %>
    <%= f.text_field :author %>
  </div>

  <div class="row">
    <%= f.label :source %>
    <%= f.text_field :source %>
  </div>

  <div class="row">
    <%= f.label :motto %>
    <%= f.text_field :motto %>
  </div>

  <div class="row">
    <%= f.submit 'Add House' %>
  </div>
<% end %>
